{
  "GlobalConfiguration": { "BaseUrl": "http://apigateway:8080" },
  "Routes": [
    /* EVENTOS */
    {
      "DownstreamPathTemplate": "/api/Eventos",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "eventoapi",
          "Port": 8080
        }
      ],
      "UpstreamPathTemplate": "/eventos",
      "UpstreamHttpMethod": [ "GET", "POST" ],
      "SwaggerKey": "eventos-service",
      "RateLimitOptions": {
        "EnableRateLimiting": true,
        "Period": "1m",
        "PeriodTimespan": 60,
        "Limit": 10
      },
      "FileCacheOptions": {
        "TtlSeconds": 20,
        "Region": "eventosCache"
      }
    },
    {
      "DownstreamPathTemplate": "/api/Eventos/{id}",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "eventoapi",
          "Port": 8080
        }
      ],
      "UpstreamPathTemplate": "/eventos/{id}",
      "UpstreamHttpMethod": [ "GET", "PUT", "DELETE" ],
      "SwaggerKey": "eventos-service",
      "RateLimitOptions": {
        "EnableRateLimiting": true,
        "Period": "1m",
        "PeriodTimespan": 60,
        "Limit": 10
      },
      "FileCacheOptions": {
        "TtlSeconds": 20,
        "Region": "eventosCache"
      }
    },

